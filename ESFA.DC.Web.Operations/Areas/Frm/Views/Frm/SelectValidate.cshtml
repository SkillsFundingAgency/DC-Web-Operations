@model ESFA.DC.Web.Operations.Areas.Frm.Models.FrmReportModel
@using ESFA.DC.Web.Operations.Constants

@{
    ViewData["Title"] = "SelectValidate";
    ViewData[ViewDataConstants.BackLink] = "/";

}


    <div class="govuk-grid-row">
        <label class="govuk-label" for="FrmYearPeriod">
            Year of Reports
        </label>
        @Html.TextBoxFor(model => model.FrmYearPeriod, new { @class = "govuk-input govuk-input--width-4", id = "frm", @type = "text" })
        <span class="govuk-error-message">
            <span asp-validation-for="FrmYearPeriod"></span>
        </span>
        <label class="govuk-label">
            Start date
        </label>
        @Html.TextBoxFor(model => model.FrmDate, "{0:yyyy-MM-dd}", new { @class = "govuk-input govuk-!-width-one-third", id = "FrmDate", @type = "date", placeholder = "DD/MM/YYYY" })
        <span class="govuk-error-message">
            <span asp-validation-for="FrmDate"></span>
        </span>
    </div>
    <br />
    <button type="submit" id="submitButton" class="govuk-button" formaction="FrmSubmit">Validate</button>







<p>
    <div class="govuk-link"><a asp-action="Index">Cancel</a></div>
</p>

@section PageScripts
    {
    <script src="~/assets/minified/aspnet-validation.min.js"></script>

    <script type="module">
        var v = new aspnetValidation.ValidationService();
        v.bootstrap();
    </script>
}