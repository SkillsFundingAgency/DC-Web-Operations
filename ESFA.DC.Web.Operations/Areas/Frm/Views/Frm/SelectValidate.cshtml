@using ESFA.DC.Web.Operations.Constants
@model ESFA.DC.Web.Operations.Areas.Frm.Models.FrmReportModel

@{
    ViewData["Title"] = "SelectValidate";
    ViewData[ViewDataConstants.BackLink] = "/";

}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-x1">Do you want to Validate your FRM reports?</h1>
        <div class="govuk-form-group">
            <label class="govuk-label" for="name"></label>
            @using (Html.BeginForm())
            {
                <div class="govuk-form-group">
                    <label class="govuk-label" for="FrmYearPeriod">
                        Year of Reports
                    </label>
                    <input asp-for="FrmYearPeriod" class="govuk-input" id="FrmYearPeriod" name="FrmYearPeriod" type="text" pattern="[0-9]*">
                </div>
                <div class="govuk-form-group">
                    <label class="govuk-label" for="FrmYearPeriod">
                        Date attached to reports
                    </label>
                    <input asp-for="FrmDate" type="date" class="form-control" />
                </div>
                <br />
                <button type="submit" class="govuk-button" formaction="SubmitFrm">Validate</button>
                <br />
                <p>
                    <div class="govuk-link"><a asp-controller="Home" asp-action="Index">Cancel</a></div>
                </p>
            }
        </div>
        </div>
</div>