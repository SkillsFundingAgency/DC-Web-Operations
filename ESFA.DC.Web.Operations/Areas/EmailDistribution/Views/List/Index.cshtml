@using ESFA.DC.Web.Operations.Constants
@model IEnumerable<ESFA.DC.EmailDistribution.Models.RecipientGroup>
@{
    ViewData["Title"] = "Manage distribution list";
    ViewData[ViewDataConstants.EmailNavigation] = "EmailNavigation";

}


<h1 class="govuk-heading-xl">Manage distribution list</h1>


<!-- <h2 class="govuk-heading-m">DCT mailing list</h2> -->
<table class="govuk-table">
    <thead class="govuk-table__head">
        <tr class="govuk-table__row">
            <th class="govuk-table__header" scope="col"></th>
            <th class="govuk-table__header" scope="col"></th>
            <th class="" scope=""></th>
        </tr>
    </thead>
    <tbody class="govuk-table__body" id="referenceDataContainer">

        @foreach (var group in Model)
        {
            <tr class="govuk-table__row">
                <td class="govuk-table__cell">@group.GroupName</td>
                <td class="govuk-table__cell">
                    @Html.ActionLink("Manage list", "DisplayGroupRecipients", "Group", new { group.RecipientGroupId })
                </td>
            </tr>
        }

    </tbody>
</table>


