@using ESFA.DC.Web.Operations.Constants

@{
    ViewData["Title"] = "Add a new distribution list";
    ViewData[ViewDataConstants.EmailNavigation] = "EmailNavigation";
    ViewData[ViewDataConstants.EmailDistributionHome] = "/emaildistribution";

}

<h1 class="govuk-heading-xl">Enter the list's name</h1>


<form asp-controller="Group" asp-action="Submit" method="post" id="choiceform">
    <div class="govuk-form-group">

        <input class="govuk-input govuk-input--width-20" id="groupName" name="groupName" type="text">
    </div>

    <button class="govuk-button">
        Add
    </button>
</form>


