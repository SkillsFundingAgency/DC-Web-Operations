@using ESFA.DC.Web.Operations.Constants
@model ESFA.DC.Web.Operations.Models.Processing.JobProcessingModel<ESFA.DC.Jobs.Model.Processing.JobsFailedToday.JobFailedTodayLookupModel>

@{
    ViewData["Title"] = "Jobs failed today";
    ViewData[ViewDataConstants.BackLink] = "/";
}
<div id="content"></div>
<div class="govuk-grid-row">
    <br />
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">Failed today</h1>
    </div>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full" id="table_box_native">
        <table class="govuk-table" id="tblData">
            <thead class="govuk-table__head">
                <tr class="govuk-table__row">
                    <th class="govuk-table__header" scope="col" style="width:200px">Provider name</th>
                    <th class="govuk-table__header" scope="col" style="width:80px">UKPRN</th>
                    <th class="govuk-table__header" scope="col" style="width:80px">Job Id</th>
                    <th class="govuk-table__header" scope="col" style="width:160px">Filename </th>
                    <th class="govuk-table__header" scope="col" style="width:170px">Failed at</th>
                    <th class="govuk-table__header" scope="col">Processing time before failure</th>
                </tr>
            </thead>
            <tbody class="govuk-table__body" id="dataContent">
            </tbody>
        </table>
    </div>
    <div id="index_native" class="box"></div>
</div>

<a href="#" class="govuk-button" id="aBtnDownloadCSV">Download CSV</a>
<br />

<div class="govuk-grid-row">
    <div class="govuk-grid-column-one-third">&nbsp;</div>
    <div class="govuk-grid-column-two-thirds">
        <state-display></state-display>
    </div>
</div>

@section PageScripts
{
    <partial name="_InitialState" model="Model" />
    <script src="~/lib/signalr/dist/browser/signalr.js" asp-append-version="true"></script>
    <script src="~/lib/chartjs/dist/chart.bundle.min.js" asp-append-version="true"></script>
    <script src="~/assets/js/processing/jobFailedTodayController.js" asp-append-version="true" type="module"></script>
}