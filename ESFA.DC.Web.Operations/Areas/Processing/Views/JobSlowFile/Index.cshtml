@using ESFA.DC.Web.Operations.Constants
@model string

@{
    ViewData["Title"] = "Jobs slow files";
    ViewData[ViewDataConstants.BackLink] = "/";
}
<div id="content"></div>
<div class="govuk-grid-row">
    <br />
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">Slow files</h1>
    </div>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <table class="govuk-table" id="tblData">
            <thead class="govuk-table__head">
                <tr class="govuk-table__row">
                    <th class="govuk-table__header" scope="col" style="width:250px">Provider name</th>
                    <th class="govuk-table__header" scope="col" style="width:100px">UKPRN</th>
                    <th class="govuk-table__header" scope="col" style="width:170px">Filename </th>
                    <th class="govuk-table__header" scope="col" style="width:170px">Time taken</th>
                    <th class="govuk-table__header" scope="col">Average time</th>
                </tr>
            </thead>
            <tbody class="govuk-table__body" id="dataContent">
            </tbody>
        </table>
    </div>
</div>

<a href="#" class="govuk-button" onclick="downloadCSV()" id="aBtnDownloadCSV">Download CSV</a>

<br />

<div class="govuk-grid-row">
    <div class="govuk-grid-column-one-third">&nbsp;</div>
    <div class="govuk-grid-column-two-thirds">
        <label id="lastSync"></label>

        <label id="state"></label>
    </div>
</div>

<script src="~/lib/signalr/dist/browser/signalr.js" asp-append-version="true"></script>
<script src="~/lib/chartjs/dist/chart.bundle.min.js" asp-append-version="true"></script>

<script type="module">

    import JobSlowFileController from "/assets/js/processing/jobSlowFileController.js";
    import Hub from '/assets/js/hubs/hub.js';

    (function () {
        const jobSlowFileController = new JobSlowFileController();
        const hub = new Hub('jobSlowFileHub', jobSlowFileController.displayConnectionState);

        jobSlowFileController.registerHandlers(hub);

        hub.startHub();

        const data = @Json.Serialize(Model);
        jobSlowFileController.updatePage(data);

        window.change = function () {
            jobSlowFileController.updatePage(jobSlowFileController._data);
        };

        window.downloadCSV = function () {
            jobSlowFileController.downloadCSV();
        };

    })();

</script>