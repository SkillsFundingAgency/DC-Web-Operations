@using ESFA.DC.Web.Operations.Constants
@model string

@{
    ViewData["Title"] = "Das Mismatch";
    ViewData[ViewDataConstants.BackLink] = "/";
}
<div id="content"></div>
<div class="govuk-grid-row">
    <br />
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">Das Mismatch</h1>
    </div>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <table class="govuk-table" id="tblData">
            <thead class="govuk-table__head">
                <tr class="govuk-table__row">
                    <th class="govuk-table__header govuk-!-width-one-third" scope="col">Provider name</th>
                    <th class="govuk-table__header" scope="col">UKPRN</th>
                    <th class="govuk-table__header govuk-!-width-one-quarter" scope="col">Filename </th>
                    <th class="govuk-table__header govuk-!-width-one-quarter" scope="col">Date/time of submission</th>
                    <th class="govuk-table__header" scope="col">Job id</th>
                </tr>
            </thead>
            <tbody class="govuk-table__body" id="dataContent">
            </tbody>
        </table>
    </div>
</div>

<a href="#" class="govuk-button" onclick="downloadCSV()" id="aBtnDownloadCSV">Download CSV</a>

<br />

<div class="govuk-grid-row">
    <div class="govuk-grid-column-one-third">&nbsp;</div>
    <div class="govuk-grid-column-two-thirds">
        <label id="lastSync"></label>

        <label id="state"></label>
    </div>
</div>

<script src="~/assets/js/signalr/dist/browser/signalr.js"></script>
<script src="~/assets/js/chartJs/Chart.bundle.min.js"></script>

<script type="module">

    import JobDasMismatchController from "/assets/js/processing/jobDasMismatchController.js";
    import Hub from '/assets/js/hubs/hub.js';
    
    (function () {
        const jobDasMismatchController = new JobDasMismatchController();
        const hub = new Hub('jobDasMismatchHub', jobDasMismatchController.displayConnectionState);
        jobDasMismatchController.registerHandlers(hub);
        hub.startHub();

        const data = @Json.Serialize(Model);
        jobDasMismatchController.updatePage(data);

        window.change = function () {
            jobDasMismatchController.updatePage(jobDasMismatchController._data);
        };

        window.downloadCSV = function () {
            jobDasMismatchController.downloadCSV();
        };
    })();
</script>