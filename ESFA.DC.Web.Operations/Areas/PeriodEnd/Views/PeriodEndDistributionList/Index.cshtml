@model ESFA.DC.Web.Operations.Areas.PeriodEnd.Models.DistributionListViewModel

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl" style="margin-bottom: 10px;">Manage mailing lists</h1>
    </div>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <table class="govuk-table">
            <thead class="govuk-table__head">
                <tr class="govuk-table__row">
                    <th class="govuk-table__header" scope="col">Mailing List</th>
                    <th class="govuk-table__header" scope="col"></th>
                    <th class="govuk-table__header" scope="col"></th>
                </tr>
            </thead>
            <tbody class="govuk-table__body">
                @if (Model?.RecipientGroups != null && Model.RecipientGroups.Any())
                {
                    foreach (var recipientGroup in Model.RecipientGroups)
                    {
                        <tr>
                            <td>@recipientGroup.GroupName</td>
                            <td>@Html.ActionLink("Edit", "EditMailingList", new { Id = recipientGroup.RecipientGroupId })</td>
                            <td>@Html.ActionLink("Remove", "DeleteMailingList", new { Id = recipientGroup.RecipientGroupId})</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3">No mailing lists</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>